# Add support for wildcard subdomains of the parent domain to route to the same Ingresses
${SECRET_PARENTS_DOMAIN}:1053 {
  errors
  rewrite stop name regex (.*)\.${SECRET_PARENTS_DOMAIN}$ ${SECRET_PARENTS_DOMAIN} answer auto
  k8s_gateway . {
    resources Ingress
  }
}

.:1053 {
  errors
  log
  health {
    lameduck 5s
  }
  ready
  k8s_gateway ${SECRET_PUBLIC_DOMAIN} {
    resources Ingress
    fallthrough
  }
  forward . 1.1.1.1 1.0.0.1
  prometheus 0.0.0.0:9153
  loadbalance
}
