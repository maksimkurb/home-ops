{
  "storage": {
    "type": "rclone",
    "config": {
      "remotePath": "gdrive:kopia-backups",
      "startupTimeout": "15s",
      "atomicWrites": true,
      "dirShards": null
    }
  },
  "caching": {
    "cacheDirectory": "/data-rw/kopia-cache",
    "maxCacheSize": 5242880000,
    "maxMetadataCacheSize": 5242880000,
    "maxListCacheDuration": 30
  },
  "hostname": "cluster",
  "username": "root",
  "description": "Repository in RClone gdrive:kopia-backups",
  "enableActions": true,
  "formatBlobCacheDuration": 900000000000
}
