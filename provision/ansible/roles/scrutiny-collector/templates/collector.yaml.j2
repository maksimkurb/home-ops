---
# Scrutiny collector configuration
# Generated by Ansible

commands:
  metrics_smartctl_bin: "/usr/sbin/smartctl"

# API endpoint for scrutiny web interface
api:
  endpoint: {{ scrutiny_collector_api_endpoint }}

# Devices to monitor
{% if scrutiny_collector_devices | length > 0 %}
devices:
{% for device in scrutiny_collector_devices %}
  - {{ device }}
{% endfor %}
{% endif %}
