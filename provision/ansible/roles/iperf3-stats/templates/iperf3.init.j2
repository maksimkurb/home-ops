#!/bin/sh /etc/rc.common
# iPerf3 Server init script for OpenWRT

START=99
STOP=10

USE_PROCD=1

PROG=/usr/bin/iperf3
PORT={{ iperf3_server_port }}
IDLE_TIMEOUT={{ iperf3_server_timeout | default("40") }}

start_service() {
    procd_open_instance
    procd_set_param command $PROG --server --port $PORT --idle-timeout $IDLE_TIMEOUT --forceflush
    procd_set_param respawn
    procd_set_param stdout 1
    procd_set_param stderr 1
    procd_close_instance
}

restart() {
    stop
    sleep 1
    start
}
